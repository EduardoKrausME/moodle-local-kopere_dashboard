{{!
    @template local_kopere_dashboard/profile_list_courses

    Example context (json):
    {
        "course": {
            "fullname": "Introdução ao Moodle"
        },
        "matriculastatus": "Ativo",
        "date": "2025-03-14",
        "expirationend": "Expira em 30 dias",
        "url": "https://seumoodle.com/editar-perfil",
        "rolehtml": "<span class='role'>Estudante</span>"
    }
}}

<div>
    <h4 class="title">{{{course.fullname}}}
        <span class="status">{{{matriculastatus}}}</span>
    </h4>
    <div>{{#str}}profile_enrol_start, local_kopere_dashboard{{/str}}
        <em>{{{date}}}</em>
        {{{expirationend}}} -
        <a class="btn btn-info btn-xs"
           href="{{{url}}}">{{#str}}profile_edit, local_kopere_dashboard{{/str}}</a>
    </div>
    <div class="roles">{{#str}}profile_enrol_profile, local_kopere_dashboard{{/str}}:
        {{{rolehtml}}}
    </div>
</div>
