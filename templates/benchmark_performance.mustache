{{!
    @template local_kopere_dashboard/benchmark_performance

    Example context (json):
    {
        "tests": [
            {
                "class": "test-pass",
                "title": "Teste 1",
                "resposta": "Aprovado",
                "description": "Este teste foi bem-sucedido.",
                "url": "configuracoes/teste1"
            },
            {
                "class": "test-fail",
                "title": "Teste 2",
                "resposta": "Falhou",
                "description": "Houve um erro ao executar este teste.",
                "url": "configuracoes/teste2"
            }
        ]
    }
}}

<table class="table" id="benchmarkresult">
    <tr>
        <th>{{#str}}benchmark_testconf_problem, local_kopere_dashboard{{/str}}</th>
        <th>{{#str}}benchmark_testconf_status, local_kopere_dashboard{{/str}}</th>
        <th>{{#str}}benchmark_testconf_description, local_kopere_dashboard{{/str}}</th>
        <th>{{#str}}benchmark_testconf_action, local_kopere_dashboard{{/str}}</th>
    </tr>

    <tbody>
    {{#tests}}
        <tr class="{{{class}}}">
            <td>{{{title}}}</td>
            <td>{{{resposta}}}</td>
            <td>{{{description}}}</td>
            <td><a target="_blank" href="{{{config.wwwroot}}}/admin/{{{url}}}">{{#str}}edit{{/str}}</a></td>
        </tr>
    {{/tests}}
    </tbody>
</table>