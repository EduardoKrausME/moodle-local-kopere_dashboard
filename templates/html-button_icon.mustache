{{!
    @template local_kopere_dashboard/html-button_icon

    Example context (json):
    {
        "icon": "delete",
        "confirmtitle": "Are you sure?",
        "confirmtext": "Do you really want to delete this item? This action cannot be undone.",
        "link": "https://example.com/confirm-action"
    }
}}

<span id="btn-{{button_id}}" style="display:none">
    <img src="{{{config.wwwroot}}}/local/kopere_dashboard/assets/dashboard/img/actions/{{{icon}}}.svg"
         width="19"
         alt="{{{icon}}}">
</span>

<div id="confirm-{{{button_id}}}" class="confirm-dialog"
     style="display:none;min-width: 400px;"
     title="{{confirmtitle}}">
    <p class="text-center">{{confirmtext}}</p>
</div>
