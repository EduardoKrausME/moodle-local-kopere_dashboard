<div class='col-lg-4 col-md-6 col-sm-12'>
    <div class='box-page'>
        <div class='thumbnail'>
            <a href='{{{config.wwwroot}}}/local/kopere_dashboard/?p={{{link}}}'>
                <span style='background-image:url({{{imagem}}})'></span>
            </a>
            {{#cursofree}}
                <div class='preco-curso preco-curso-free'>Gratis</div>
            {{/cursofree}}
            {{#cursopago}}
                <div class='preco-curso'>R$ {{{cursopreco}}}</div>
            {{/cursopago}}
        </div>
        <div class='content'>
            <h5 class='title'>
                <a href='{{{link}}}'>{{{title}}}</a>
            </h5>
            <p>{{{text}}}</p>
        </div>
    </div>
</div>