{{!
    @template local_kopere_dashboard/last_grades

    Example context (json):
    {
        "user_fullname": "Jane Doe",
        "profileimageurl": "https://example.com/path/to/profileimage.jpg",
        "users_details": "https://example.com/user/details",
        "users_details_ajax": "https://example.com/ajax/user/details",
        "dashboard_grade_text": "<strong>85%</strong> de conclusão alcançada!",
        "grade_date": "2024-11-30"
    }
}}

<div class="media dashboard-grade-list">
    <div class="media-left">
        <img title="{{user_fullname}}" src="{{profileimageurl}}" class="media-object">
    </div>
    <div class="media-body">
        <h4 class="media-heading">
            <a href="{{users_details}}" data-href="{{users_details_ajax}}">{{user_fullname}}</a>
        </h4>
        <p>{{{dashboard_grade_text}}}</p>
        <div class="date">
            <small>{{#str}}dashboard_grade_in, local_kopere_dashboard{{/str}}
                <i>{{grade_date}}</i>
            </small>
        </div>
    </div>
    <div class="clear"></div>
</div>
